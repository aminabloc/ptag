<div class="row">
  <div class="col s12 m6">
    <div class="video_form">
        <img id="bg_img" src="https://img.thedailybeast.com/image/upload/c_crop,d_placeholder_euli9k,h_1439,w_2560,x_0,y_0/dpr_1.5/c_limit,w_1044/fl_lossy,q_auto/v1492119811/articles/2016/02/12/you-re-damn-right-electability-matters-to-black-voters/160211-goff-electability-tease_n7mdtd">
        <div id="overlay"> </div>
    </div>
  </div>
  <div class="s12 m6" style="position:fixed; background-color: white;left: 50%; height: 100%; padding: 5% 5%; width: 50%">

<% if @video.quality == true and @video.shareable == true %> 
<p>
  <strong>Share Code:</strong>
  <%= link_to video_url(id: @video.id) %>
</p>
<% else%> 
<p class="red-text">
  Your video is currently being reviewed and we will be back to you shortly with your share link!
</p>
<% end %> 

<p>
  <video src="<%= @video.attachment %>" style="width: 50%" controls>
</p>

<p>
  <strong>Comment:</strong>
  <%= @video.comment %>
</p>




<%= link_to 'Edit', edit_video_path(@video) %> |
<%= link_to 'Back', videos_path %>

  </div>
</div>

<style>
  #bg_img{
    position:fixed;
    width: 100%;
    height: 100%;
    left:0;
    opacity: .7;
    -webkit-filter: grayscale(100%); /* Safari 6.0 - 9.0 */
    filter: grayscale(100%);
    z-index: -3;
  }
  ::placeholder {
    color: grey ;
  }
  
  
  #overlay {
    position:fixed;
    width: 100%;
    height: 100%;
    z-index: -2;
    left:0;
    opacity: .7;
    background-color: black;
  }
  strong {
    font-family: Questrial;
    font-weight: bolder;
    text-transform: uppercase;
  }
</style>
